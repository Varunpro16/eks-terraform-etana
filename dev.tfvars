# terraform.tfvars

###############################################################################
# AWS Provider Configuration
###############################################################################

region = "us-west-2"

###############################################################################
# EKS Cluster Configuration
###############################################################################

cluster_name    = "etana-dev"
cluster_version = "1.30"

###############################################################################
# VPC Configuration
###############################################################################


# CIDR blocks for subnets
private_subnets = [
  "10.0.1.0/24",
  "10.0.2.0/24",
  "10.0.3.0/24"
]

public_subnets = [
  "10.0.101.0/24",
  "10.0.102.0/24",
  "10.0.103.0/24"
]
# intra_subnets = ["10.0.104.0/24", "10.0.105.0/24", "10.0.106.0/24"]

###############################################################################
# EKS Node Group Configuration
###############################################################################

# Node group size configuration
min_size     = 1
max_size     = 2
desired_size = 2

# EC2 instance types for the node group
instance_types = ["t3.medium"]